<tr>
  <td class="project_image">
  <%= link_to (image_tag(project.image_url, :class => "project_miniature")),
                             project_path(project) %>
  </td>
  <td class="project_text">
    <%= link_to project.text, project_path(project) %>
  </td>

  <td class="project_rating">
    <% if project.score.nil? %>
      No rating
    <% else %>
      <%= project.score %>
    <% end %>
  </td>

  <td class="project_comments"><%= project.comments.count %></td>
</tr>
