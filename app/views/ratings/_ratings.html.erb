<% if current_designer_rating == "N/A" %>
  <% @action = "create" %>
<% else %>
  <% @action = "update" %>
<% end %>
<% form_remote_for(:rating, :url => {:controller => "ratings", :action => @action},
                     :html => { :class => 'rating_ballot' }) do |f| %>
  <%= f.label("value_1", content_tag(:span, '1'), {:class=>"rating", :id=> "1"}) %>
    <%= radio_button_tag("rating[value]", 1, current_designer_rating == 1, :class => 'rating_button') %>
  <%= f.label("value_2", content_tag(:span, '2'), {:class=>"rating", :id=> "2"}) %>
    <%= radio_button_tag("rating[value]", 2, current_designer_rating == 2, :class => 'rating_button') %>
  <%= f.label("value_3", content_tag(:span, '3'), {:class=>"rating", :id=> "3"}) %>
    <%= radio_button_tag("rating[value]", 3, current_designer_rating == 3, :class => 'rating_button') %>
  <%= f.label("value_4", content_tag(:span, '4'), {:class=>"rating", :id=> "4"}) %>
    <%= radio_button_tag("rating[value]", 4, current_designer_rating == 4, :class => 'rating_button') %>
  <%= f.label("value_5", content_tag(:span, '5'), {:class=>"rating", :id=> "5"}) %>
    <%= radio_button_tag("rating[value]", 5, current_designer_rating == 5, :class => 'rating_button') %>

    <%= hidden_field_tag("project_id", @project.id) %>
    <%= hidden_field_tag("designer_id", session[:user_id]) %>
  <%= f.submit "Submit" %>
<% end %>
